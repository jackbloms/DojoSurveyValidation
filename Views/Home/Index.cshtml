@model Survey

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dojo Survey</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>
<body>
    <h3>Welcome!</h3>
    <form asp-controller="Home" asp-action="Submission" method="POST">
        <div>
            <label asp-for="UserName"></label>
            <span asp-validation-for="UserName" class="text-danger"></span>
            <input asp-for="UserName">
        </div>
        <div>
            <label asp-for="Location"></label>
            <span asp-validation-for="Location" class="text-danger"></span>
            <select type="dropdown" asp-for="Location">
                <option value="">Select...</option>
                <option value="Chicago">Chicago</option>
                <option value="Miami">Miami</option>
                <option value="Los Angeles">Los Angeles</option>
                <option value="Austin">Austin</option>
                <option value="Charlotte">Charlotte</option>
            </select>
        </div>
        <div>
            <label asp-for="FavLanguage"></label>
            <span asp-validation-for="FavLanguage" class="text-danger"></span>
            <select type="dropdown" asp-for="FavLanguage">
                <option value="">Select...</option>
                <option value="C#">C#</option>
                <option value="MERN">MERN</option>
                <option value="Python">Python</option>
                <option value="JavaScript">JavaScript</option>
            </select>
        </div>
        <div>
            <label asp-for="Comment"></label>
            <span asp-validation-for="Comment" class="text-danger"></span>
            <textarea asp-for="Comment" rows="5" cols="33"></textarea>
        </div>
        <button type="submit">Submit</button>
    </form>
</body>
</html>
